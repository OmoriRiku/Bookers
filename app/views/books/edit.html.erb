<h1 class="heading-wp">Editing Book</h1>

<% if @book.errors.any? %>
  <div class="error">
    <h2><%= @book.errors.count %> error</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book, method: :patch do |f| %>
    <div class="form-field">
        <%= f.label :title, "Title" %>
        <%= f.text_field :title %>
    </div>
    <div class="form-field">
        <%= f.label :body, "body" %>
        <%= f.text_area :body %>
    </div>
    <div class="form-btn-wp">
        <%= f.submit 'Update Book' %>
    </div>
<% end %>

<%= link_to "Show", book_path(@book.id), {class: "nav-link"} %>
<%= link_to "Back", "/books", {class: "nav-link"} %>